@model tourismApp.ViewModels.UserViewModel;
@{
	Layout = null;
}
<html>
	<head>
		<title> Register </title>
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	</head>
	<body>
		<div class= "row mt-s justify-content-center">
			<div class="col-sm-4">
				<div class="card">
					<div class="card-header"> Register</div>
					<div class="card-body">
						<form asp-action="Register" asp-controller="Account" method="post">
							<input class="form-control mb-3" type="text" placeholder="Name" required asp-for="UserName">Name</input>
							<input class="form-control mb-3" type="text" placeholder="Email" required asp-for="UserEmail">Email</input>
							<input class="form-control mb-3" type="password" placeholder="Password" required asp-for="UserPassword">Password</input>
							<input class="form-control mb-3" type="password" placeholder="Confirm Password" required asp-for="UserPasswordConfirmed">Confirm Password</input>
							<div class="d-grid gap-2 mb-3">
								<button class="btn btn-primary" type="submit">Register</button>
							</div>
						@if(ViewData["Message"]!= null)
						{
							<div class="alert alert-danger" role="alert"> @ViewData["Message"]</div>
						}
					</form>
					Already member? <a asp-controller="Account" asp-action="Login">login</a>
					</div>

				</div>
			</div>

		</div>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
